{
    "builds": [
        {
            "src": "src/api/main.py",
            "use": "@vercel/python",
            "config": {
                "excludeFiles": "web/**"
            }
        },
        {
            "src": "web/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "src/api/main.py"
        },
        {
            "src": "/(.*)",
            "dest": "web/$1"
        }
    ]
}